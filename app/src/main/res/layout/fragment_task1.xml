<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_gray"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_task1_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_task1"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edit_task1_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_task1_padding"
            android:digits="0123456789,-"
            android:hint="@string/text_task1_input_hint" />


        <Button
            android:id="@+id/find_missed_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_task1_padding"
            android:text="@string/text_task1_button" />

        <TextView
            android:id="@+id/text_lowest_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_task1_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_task1_text_output"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>